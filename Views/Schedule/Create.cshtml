@model Schedule
@{
    ViewData["Title"] = "Добавить событие";
}

<!--Страница добавления события в расписание-->
<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EventType" class="control-label"></label>
        <select asp-for="EventType" class="form-control" asp-items="Html.GetEnumSelectList<EventType>()"></select>
    </div>
    
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="StartDateTime" class="control-label"></label>
        <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
    </div>
    
    <div class="form-group">
        <label asp-for="EndDateTime" class="control-label"></label>
        <input asp-for="EndDateTime" class="form-control" type="datetime-local" />
    </div>
    
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <label asp-for="CoachId" class="control-label"></label>
        <select asp-for="CoachId" class="form-control" asp-items="ViewBag.Coaches">
            <option value="">-- Выберите тренера --</option>
        </select>
    </div>
    
    <div class="form-group mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>